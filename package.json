{
  "name": "iffr-api",
  "private": true,
  "main": "lib/index.js",
  "scripts": {
    "start": "nodemon",
    "test": "npm run lint",
    "lint": "tslint ./src/**/*.ts",
    "format": "npm run lint -- --fix",
    "add-to-hostfile": "sudo npx hostile set localhost localhost.api.iffr.com"
  },
  "dependencies": {
    "dotenv": "^5.0.1",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-combine-routers": "^3.0.0",
    "node-fetch": "^2.1.2",
    "ts-custom-error": "^2.2.1"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node ./src/index.ts"
  },
  "devDependencies": {
    "@types/koa": "^2.0.45",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-router": "^7.0.27",
    "@types/node-fetch": "^1.6.8",
    "koa-router": "^7.4.0",
    "nodemon": "^1.17.3",
    "prettier": "^1.12.1",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.1"
  }
}
